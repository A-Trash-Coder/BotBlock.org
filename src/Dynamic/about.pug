extends layout
block content
    section.section
        .container
            .columns
                .column

                    .card.is-box-shadow
                        .card-content

                            h1.title.is-size-3.has-text-white #{__('site_name')} - #{__('short_desc')}

                            for section in sections
                                h5.is-size-5.has-text-white(id=section.id)
                                    | #{section.title}&nbsp;
                                    a(href=`#${section.id}`) &supdsub;
                                div !{section.content}

block footer
    script(src='/assets/js/scroll.js')
